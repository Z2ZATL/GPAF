# GPAF Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# API KEYS - Add your API keys here
# =============================================================================

# OpenAI API Key (required for GPT models)
API_KEY_OPENAI=your-openai-api-key-here

# Anthropic API Key (required for Claude models)
API_KEY_ANTHROPIC=your-anthropic-api-key-here

# Google API Key (required for Gemini models)
API_KEY_GOOGLE=your-google-api-key-here

# Mistral AI API Key
API_KEY_MISTRAL=your-mistral-api-key-here

# Groq API Key (for fast inference)
API_KEY_GROQ=your-groq-api-key-here

# Perplexity API Key (for search)
API_KEY_PERPLEXITY=your-perplexity-api-key-here

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================

# Web UI Authentication (change these for security)
AUTH_LOGIN=admin
AUTH_PASSWORD=gpaf123

# API Key for external access (optional)
API_KEY=your-internal-api-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Web UI Configuration
WEB_UI_HOST=0.0.0.0
WEB_UI_PORT=5000

# Disable RFC (Request For Confirmation) for non-interactive use
DISABLE_RFC=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# DATABASE AND STORAGE
# =============================================================================

# SQLite database path
SQLITE_DB_PATH=/app/memory/database.db

# Tiktoken cache directory
TIKTOKEN_CACHE_DIR=/tmp/tiktoken_cache

# =============================================================================
# MODEL CONFIGURATIONS (Optional - can be set in UI)
# =============================================================================

# Default chat model
# CHAT_MODEL_PROVIDER=OPENAI
# CHAT_MODEL_NAME=gpt-4

# Default utility model  
# UTIL_MODEL_PROVIDER=OPENAI
# UTIL_MODEL_NAME=gpt-3.5-turbo

# Default embedding model
# EMBED_MODEL_PROVIDER=OPENAI
# EMBED_MODEL_NAME=text-embedding-3-small

# =============================================================================
# MCP (Model Context Protocol) SERVERS
# =============================================================================

# MCP Servers configuration (JSON format)
# MCP_SERVERS=[]

# =============================================================================
# DOCKER SPECIFIC SETTINGS
# =============================================================================

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=false

# Python settings
PYTHONUNBUFFERED=1
PYTHONPATH=/app